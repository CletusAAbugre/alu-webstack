global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon
    tune.ssl.default-dh-param 2048

defaults
    log global
    mode http
    option httplog
    timeout client 15s
    timeout connect 10s
    timeout server 15s
    timeout http-request 10s
    option forwardfor
    option http-server-close

frontend clickviral-tech-frontend
    bind *:80
    bind *:443 ssl crt /etc/letsencrypt/live/www.cletusaabugre.tech/fullchain.pem key /etc/letsencrypt/live/www.cletusaabugre.tech/privkey.pem
    acl path_acme_challenge path_beg /.well-known/acme-challenge/
    use_backend acme_backend if path_acme_challenge
    redirect scheme https code 301 if !{ ssl_fc }
    default_backend clickviral-tech-backend

backend clickviral-tech-backend
    balance roundrobin
    option httpchk GET /health-check
    server 6274-web-01 107.21.88.109:80 check
    server 6274-web-02 54.237.140.194:80 check

backend acme_backend
    server acme_server 127.0.0.1:8080

